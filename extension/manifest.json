{
  "manifest_version": 3,
  "name": "Hindi-Urdu to Custom Latin Converter",
  "version": "1.0",
  "description": "Convert Hindi/Urdu text to custom Latin script.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  }
}